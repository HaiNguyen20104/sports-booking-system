extends ../layouts/main

block content
  .auth-container
    .auth-card
      h2.auth-title Quên Mật Khẩu
      p.auth-subtitle Nhập email của bạn để nhận liên kết đặt lại mật khẩu
      
      .alert.alert-error(style="display: none;" id="error-message")
      .alert.alert-success(style="display: none;" id="success-message")
      
      form#forgot-password-form.auth-form
        .form-group
          label(for='email') Email *
          input#email.form-control(
            type='email'
            name='email'
            required
            placeholder='example@email.com'
          )
        
        button.btn.btn-primary.btn-block(type='submit') Gửi Liên Kết Đặt Lại
        
      .auth-footer
        p 
          a(href='/login') ← Quay lại đăng nhập

block scripts
  script(src='/js/forgot-password.js')
