extends ../layouts/main

block content
  .courts-container
    .courts-header
      h2.courts-title Sân Của Tôi
      a.btn.btn-primary(href="/add-court") + Thêm Sân Mới
    
    .alert.alert-error(style="display: none;" id="error-message")
    .alert.alert-success(style="display: none;" id="success-message")
    
    #courts-list.courts-list
      .loading-spinner Đang tải danh sách sân...

  //- Court Detail Modal
  #court-detail-modal.modal(style="display: none;")
    .modal-overlay
    .modal-content.modal-large
      .modal-header
        h3.modal-title Chi Tiết Sân
        button.modal-close(type="button" onclick="closeDetailModal()") ×
      
      #court-detail-content.court-detail-content
        .loading-spinner Đang tải thông tin sân...

  //- Edit Court Modal
  #edit-court-modal.modal(style="display: none;")
    .modal-overlay
    .modal-content.modal-large
      .modal-header
        h3.modal-title Chỉnh Sửa Sân
        button.modal-close(type="button" onclick="closeEditModal()") ×
      
      .alert.alert-error(style="display: none;" id="edit-error-message")
      
      form#edit-court-form
        input(type="hidden" id="edit-court-id")
        
        .form-group
          label(for="edit-name") Tên sân *
          input.form-control#edit-name(type="text" name="name" required)
        
        .form-group
          label(for="edit-location") Địa điểm *
          input.form-control#edit-location(type="text" name="location" required)
        
        .form-group
          label(for="edit-description") Mô tả
          textarea.form-control#edit-description(name="description" rows="3")
        
        .form-row
          .form-group.half
            label(for="edit-slot_duration") Thời lượng mỗi slot (phút)
            select.form-control#edit-slot_duration(name="slot_duration")
              option(value="30") 30 phút
              option(value="60") 60 phút
              option(value="90") 90 phút
              option(value="120") 120 phút
          
          .form-group.half
            label(for="edit-status") Trạng thái
            select.form-control#edit-status(name="status")
              option(value="active") Hoạt động
              option(value="inactive") Tạm ngưng
              option(value="maintenance") Bảo trì
        
        //- Price Slots Section for Edit
        .price-slots-section
          h3.section-title Bảng giá theo khung giờ
          
          .price-slot-form
            .form-row
              .form-group.third
                label(for="edit-slot-start") Giờ bắt đầu
                input.form-control#edit-slot-start(type="time" value="06:00")
              .form-group.third
                label(for="edit-slot-end") Giờ kết thúc
                input.form-control#edit-slot-end(type="time" value="17:00")
              .form-group.third
                label(for="edit-slot-price") Giá (VNĐ)
                input.form-control#edit-slot-price(type="number" min="0" step="1000" placeholder="100000")
            button.btn.btn-secondary.btn-add-slot(type="button" id="edit-add-slot-btn") + Thêm khung giờ
          
          #edit-price-slots-list.price-slots-list
        
        .modal-actions
          button.btn.btn-secondary(type="button" onclick="closeEditModal()") Hủy
          button.btn.btn-primary(type="submit" id="edit-submit-btn") Lưu thay đổi

block scripts
  script(src="/js/my-courts.js")
