extends ../layouts/main

block content
  .court-container
    .court-card
      h2.court-title Thêm Sân Mới
      p.court-subtitle Điền thông tin để thêm sân thể thao của bạn
      
      .alert.alert-error(style="display: none;" id="error-message")
      .alert.alert-success(style="display: none;" id="success-message")
      
      form.court-form#add-court-form
        .form-group
          label(for="name") Tên sân *
          input.form-control#name(type="text" name="name" placeholder="VD: Sân bóng đá mini ABC" required)
        
        .form-group
          label(for="location") Địa điểm *
          input.form-control#location(type="text" name="location" placeholder="VD: 123 Đường ABC, Quận 1, TP.HCM" required)
        
        .form-group
          label(for="description") Mô tả
          textarea.form-control#description(name="description" rows="3" placeholder="Mô tả về sân, tiện ích, quy định...")
        
        .form-row
          .form-group.half
            label(for="slot_duration") Thời lượng mỗi slot (phút)
            select.form-control#slot_duration(name="slot_duration")
              option(value="30") 30 phút
              option(value="60" selected) 60 phút
              option(value="90") 90 phút
              option(value="120") 120 phút
          
          .form-group.half
            label(for="status") Trạng thái
            select.form-control#status(name="status")
              option(value="active") Hoạt động
              option(value="inactive") Tạm ngưng
              option(value="maintenance") Bảo trì
        
        //- Price Slots Section
        .price-slots-section
          h3.section-title Bảng giá theo khung giờ
          p.section-subtitle Thêm các khung giờ và giá tương ứng
          
          .price-slot-form
            .form-row
              .form-group.third
                label(for="slot-start") Giờ bắt đầu
                input.form-control#slot-start(type="time" value="06:00")
              .form-group.third
                label(for="slot-end") Giờ kết thúc
                input.form-control#slot-end(type="time" value="17:00")
              .form-group.third
                label(for="slot-price") Giá (VNĐ)
                input.form-control#slot-price(type="number" min="0" step="1000" placeholder="100000")
            button.btn.btn-secondary.btn-add-slot(type="button" id="add-slot-btn") + Thêm khung giờ
          
          #price-slots-list.price-slots-list
        
        button.btn.btn-primary.btn-block(type="submit" id="submit-btn") Thêm Sân
      
      .court-footer
        a(href="/my-courts") ← Quay lại danh sách sân

block scripts
  script(src="/js/add-court.js")
