extends ../layouts/main

block content
  .auth-container
    .auth-card
      h2.auth-title Đăng nhập
      
      .alert.alert-error(style="display: none;" id="error-message")
      .alert.alert-success(style="display: none;" id="success-message")
      
      form#login-form.auth-form
        .form-group
          label(for="email") Email *
          input#email.form-control(type="email" name="email" required placeholder="example@email.com")
        
        .form-group
          label(for="password") Mật khẩu *
          input#password.form-control(type="password" name="password" required placeholder="Nhập mật khẩu")
        
        .form-group.form-remember
          label.checkbox-label
            input(type="checkbox" name="remember")
            span Ghi nhớ đăng nhập
        
        button.btn.btn-primary.btn-block(type="submit") Đăng nhập
        
      .auth-footer
        p Chưa có tài khoản? 
          a(href="/register") Đăng ký ngay
        p
          a(href="/forgot-password") Quên mật khẩu?

block scripts
  script(src="/js/login.js")
