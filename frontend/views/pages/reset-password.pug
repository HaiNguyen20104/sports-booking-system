extends ../layouts/main

block content
  .auth-container
    .auth-card
      h2.auth-title Đặt Lại Mật Khẩu
      p.auth-subtitle Nhập mật khẩu mới của bạn
      
      .alert.alert-error(style="display: none;" id="error-message")
      .alert.alert-success(style="display: none;" id="success-message")
      
      form#reset-password-form.auth-form
        input(type='hidden' id='token' name='token')
        
        .form-group
          label(for='password') Mật Khẩu Mới *
          input#password.form-control(
            type='password'
            name='password'
            required
            placeholder='Nhập mật khẩu mới'
          )
          small.form-text Mật khẩu phải có ít nhất 6 ký tự, bao gồm chữ hoa, chữ thường và số
        
        .form-group
          label(for='confirmPassword') Xác Nhận Mật Khẩu *
          input#confirmPassword.form-control(
            type='password'
            name='confirmPassword'
            required
            placeholder='Nhập lại mật khẩu mới'
          )
        
        button.btn.btn-primary.btn-block(type='submit') Đặt Lại Mật Khẩu
        
      .auth-footer
        p 
          a(href='/login') ← Quay lại đăng nhập

block scripts
  script(src='/js/reset-password.js')
